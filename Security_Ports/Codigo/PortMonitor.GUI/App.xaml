<Application x:Class="PortMonitor.GUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:PortMonitor.GUI.Services">
    <Application.Resources>

        <ResourceDictionary>
            <!-- Convertidores -->
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:ServiceStatusToBrushConverter x:Key="ServiceStatusToBrushConverter"/>
            <converters:ServiceStatusToIconConverter x:Key="ServiceStatusToIconConverter"/>
            <converters:ServiceToggleIconConverter x:Key="ServiceToggleIconConverter"/>
            <converters:ServiceToggleTextConverter x:Key="ServiceToggleTextConverter"/>
            <converters:MonitoringStatusConverter x:Key="MonitoringStatusConverter"/>

            <ResourceDictionary.MergedDictionaries>
                <!-- Colores del tema: primer diccionario para que todos los estilos tengan acceso -->
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />

                <!-- Material Design: asegúrate de que los paquetes estén instalados -->
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Blue" SecondaryColor="Cyan" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />

                <!-- Estilos personalizados -->
                <ResourceDictionary Source="Resources/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/TextStyles.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
