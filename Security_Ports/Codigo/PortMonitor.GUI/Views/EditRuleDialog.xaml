<Window x:Class="PortMonitor.GUI.Views.EditRuleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Editar Regla de Firewall - Port Monitor" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        Style="{StaticResource MaterialDesignWindow}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" 
                                  Mode="PrimaryMid" 
                                  Padding="16"
                                  materialDesign:ElevationAssist.Elevation="Dp4">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="ShieldEdit" 
                                       Width="24" 
                                       Height="24" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0"/>
                <TextBlock Text="Editar Regla de Firewall" 
                         Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                         VerticalAlignment="Center"
                         Foreground="White"/>
            </StackPanel>
        </materialDesign:ColorZone>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="24">
            <StackPanel>
                
                <!-- Basic Information -->
                <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp2" Margin="0,0,0,16">
                    <StackPanel Margin="16">
                        <TextBlock Text="Información Básica" 
                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                 Margin="0,0,0,8"/>
                        
                        <TextBox Text="{Binding FirewallRule.Name}"
                               materialDesign:HintAssist.Hint="Nombre de la regla"
                               Style="{StaticResource MaterialDesignTextBox}"/>
                        
                        <TextBox Text="{Binding FirewallRule.Description}"
                               materialDesign:HintAssist.Hint="Descripción"
                               Style="{StaticResource MaterialDesignTextBox}"
                               AcceptsReturn="True"
                               Height="60"/>
                        
                        <ComboBox SelectedValue="{Binding FirewallRule.Action}"
                                materialDesign:HintAssist.Hint="Acción"
                                Style="{StaticResource MaterialDesignComboBox}">
                            <ComboBoxItem Content="Permitir" Tag="Allow"/>
                            <ComboBoxItem Content="Bloquear" Tag="Block"/>
                        </ComboBox>
                        
                        <ComboBox SelectedValue="{Binding FirewallRule.Direction}"
                                materialDesign:HintAssist.Hint="Dirección"
                                Style="{StaticResource MaterialDesignComboBox}">
                            <ComboBoxItem Content="Entrante" Tag="Inbound"/>
                            <ComboBoxItem Content="Saliente" Tag="Outbound"/>
                            <ComboBoxItem Content="Ambas" Tag="Both"/>
                        </ComboBox>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Network Configuration -->
                <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp2">
                    <StackPanel Margin="16">
                        <TextBlock Text="Configuración de Red" 
                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                 Margin="0,0,0,8"/>
                        
                        <ComboBox SelectedValue="{Binding FirewallRule.Protocol}"
                                materialDesign:HintAssist.Hint="Protocolo"
                                Style="{StaticResource MaterialDesignComboBox}">
                            <ComboBoxItem Content="TCP" Tag="TCP"/>
                            <ComboBoxItem Content="UDP" Tag="UDP"/>
                            <ComboBoxItem Content="Ambos" Tag="Any"/>
                        </ComboBox>
                        
                        <TextBox Text="{Binding FirewallRule.LocalPorts}"
                               materialDesign:HintAssist.Hint="Puertos locales (ej: 80,443,8000-8080)"
                               Style="{StaticResource MaterialDesignTextBox}"/>
                        
                        <TextBox Text="{Binding FirewallRule.RemotePorts}"
                               materialDesign:HintAssist.Hint="Puertos remotos (ej: 80,443,8000-8080)"
                               Style="{StaticResource MaterialDesignTextBox}"/>
                        
                        <TextBox Text="{Binding FirewallRule.LocalAddresses}"
                               materialDesign:HintAssist.Hint="Direcciones IP locales (ej: 192.168.1.0/24)"
                               Style="{StaticResource MaterialDesignTextBox}"/>
                        
                        <TextBox Text="{Binding FirewallRule.RemoteAddresses}"
                               materialDesign:HintAssist.Hint="Direcciones IP remotas (ej: 10.0.0.0/8)"
                               Style="{StaticResource MaterialDesignTextBox}"/>
                    </StackPanel>
                </materialDesign:Card>

                <!-- Application Configuration -->
                <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp2">
                    <StackPanel Margin="16">
                        <TextBlock Text="Configuración de Aplicación" 
                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                 Margin="0,0,0,8"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0"
                                   Text="{Binding FirewallRule.ProcessPath}"
                                   materialDesign:HintAssist.Hint="Ruta del programa"
                                   Style="{StaticResource MaterialDesignTextBox}"/>
                            
                            <Button Grid.Column="1"
                                  Content="..."
                                  Command="{Binding BrowseProgramCommand}"
                                  Style="{StaticResource MaterialDesignOutlinedButton}"
                                  Margin="8,0,0,0"
                                  Width="40"/>
                        </Grid>
                        
                        <CheckBox IsChecked="{Binding FirewallRule.IsEnabled}"
                                Content="Regla habilitada"
                                Style="{StaticResource MaterialDesignCheckBox}"/>
                    </StackPanel>
                </materialDesign:Card>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <materialDesign:ColorZone Grid.Row="2" 
                                  Mode="PrimaryLight" 
                                  Padding="16">
            <StackPanel Orientation="Horizontal" 
                      HorizontalAlignment="Right"
                     >
                
                <Button Content="Probar Regla"
                      Command="{Binding TestRuleCommand}"
                      Style="{StaticResource MaterialDesignOutlinedButton}"/>
                
                <Button Content="Cancelar"
                      IsCancel="True"
                      Style="{StaticResource MaterialDesignOutlinedButton}"/>
                
                <Button Content="Guardar"
                      Command="{Binding SaveRuleCommand}"
                      Style="{StaticResource MaterialDesignRaisedButton}"
                      IsDefault="True"/>
            </StackPanel>
        </materialDesign:ColorZone>

    </Grid>
</Window>
