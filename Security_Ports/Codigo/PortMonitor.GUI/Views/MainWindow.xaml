<Window x:Class="PortMonitor.GUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="Port Monitor - Monitoreo de Puertos de Seguridad" 
        Height="800" Width="1200"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Close" Executed="CloseCommand_Executed"/>
    </Window.CommandBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Barra de herramientas superior -->
        <materialDesign:ColorZone Grid.Row="0" Padding="16" materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                  Mode="PrimaryMid" DockPanel.Dock="Top">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <materialDesign:PackIcon Kind="Security" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Port Monitor" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <!-- Indicador de estado del servicio -->
                    <Border Background="{Binding IsServiceConnected, Converter={StaticResource ServiceStatusToBrushConverter}}" 
                            CornerRadius="12" Padding="8,4" Margin="0,0,16,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="{Binding IsServiceConnected, Converter={StaticResource ServiceStatusToIconConverter}}" 
                                                     Width="16" Height="16" Foreground="White" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding ServiceStatus}" Foreground="White" Margin="4,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Botón de modo avanzado -->
                    <ToggleButton Style="{StaticResource MaterialDesignFlatToggleButton}" 
                                  IsChecked="{Binding IsAdvancedMode}"
                                  Command="{Binding ToggleAdvancedModeCommand}"
                                  ToolTip="Modo Avanzado" Margin="8,0">
                        <materialDesign:PackIcon Kind="Settings"/>
                    </ToggleButton>

                    <!-- Botón de actualizar -->
                    <Button Style="{StaticResource MaterialDesignFlatButton}" 
                            Command="{Binding RefreshDataCommand}"
                            ToolTip="Actualizar Datos" Margin="8,0">
                        <materialDesign:PackIcon Kind="Refresh"/>
                    </Button>

                    <!-- Botón de configuración -->
                    <Button Style="{StaticResource MaterialDesignFlatButton}" 
                            Command="{Binding OpenSettingsCommand}"
                            ToolTip="Configuración" Margin="8,0">
                        <materialDesign:PackIcon Kind="Cog"/>
                    </Button>

                    <!-- Botón de minimizar a bandeja -->
                    <Button Style="{StaticResource MaterialDesignFlatButton}" 
                            Command="{Binding MinimizeToTrayCommand}"
                            ToolTip="Minimizar a Bandeja del Sistema" Margin="8,0">
                        <materialDesign:PackIcon Kind="WindowMinimize"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>

        <!-- Contenido principal -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Panel de navegación lateral -->
            <materialDesign:ColorZone Grid.Column="0" Mode="Light" Padding="0" materialDesign:ShadowAssist.ShadowDepth="Depth1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Navegación principal -->
                        <ListBox Style="{StaticResource MaterialDesignNavigationPrimaryListBox}" 
                                 SelectedValue="{Binding SelectedView}" 
                                 SelectedValuePath="Tag">
                            
                            <ListBoxItem Tag="Dashboard">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ViewDashboard" Width="24" Height="24" Margin="0,0,16,0"/>
                                    <TextBlock Text="Panel Principal" FontSize="14"/>
                                </StackPanel>
                            </ListBoxItem>
                            
                            <ListBoxItem Tag="PortEvents">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="NetworkOutline" Width="24" Height="24" Margin="0,0,16,0"/>
                                    <TextBlock Text="Eventos de Puertos" FontSize="14"/>
                                </StackPanel>
                            </ListBoxItem>
                            
                            <ListBoxItem Tag="FirewallRules">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Shield" Width="24" Height="24" Margin="0,0,16,0"/>
                                    <TextBlock Text="Reglas de Firewall" FontSize="14"/>
                                </StackPanel>
                            </ListBoxItem>

                            <!-- Separador -->
                            <Separator Margin="16,8"/>

                            <ListBoxItem Tag="Statistics">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ChartLine" Width="24" Height="24" Margin="0,0,16,0"/>
                                    <TextBlock Text="Estadísticas" FontSize="14"/>
                                </StackPanel>
                            </ListBoxItem>
                            
                            <ListBoxItem Tag="Logs">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FileDocument" Width="24" Height="24" Margin="0,0,16,0"/>
                                    <TextBlock Text="Registros" FontSize="14"/>
                                </StackPanel>
                            </ListBoxItem>
                        </ListBox>

                        <!-- Panel de control del servicio -->
                        <materialDesign:Card Margin="16" Padding="16">
                            <StackPanel>
                                <TextBlock Text="Control de Servicio" FontWeight="Bold" Margin="0,0,0,8"/>
                                
                                <Button Command="{Binding ToggleServiceCommand}" 
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Margin="0,4">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="{Binding IsServiceConnected, Converter={StaticResource ServiceToggleIconConverter}}" 
                                                                 Width="16" Height="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding IsServiceConnected, Converter={StaticResource ServiceToggleTextConverter}}"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Estadísticas rápidas -->
                        <materialDesign:Card Margin="16" Padding="16">
                            <StackPanel>
                                <TextBlock Text="Resumen" FontWeight="Bold" Margin="0,0,0,8"/>
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Eventos Totales:" FontSize="12"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TotalPortEvents}" FontSize="12" FontWeight="Bold"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Reglas Activas:" FontSize="12"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ActiveRules}" FontSize="12" FontWeight="Bold"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Puertos Bloqueados:" FontSize="12"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding BlockedPorts}" FontSize="12" FontWeight="Bold" Foreground="{StaticResource ErrorBrush}"/>
                                </Grid>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </ScrollViewer>
            </materialDesign:ColorZone>

            <!-- Área de contenido principal -->
            <ContentControl Grid.Column="1" Margin="16">
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedView}" Value="Dashboard">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <Grid>
                                            <!-- Dashboard content will be implemented here -->
                                            <TextBlock Text="Panel Principal - En Desarrollo" 
                                                       FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            
                            <DataTrigger Binding="{Binding SelectedView}" Value="PortEvents">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <ContentControl Content="{Binding PortEventsViewModel}"/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            
                            <DataTrigger Binding="{Binding SelectedView}" Value="FirewallRules">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <ContentControl Content="{Binding FirewallRulesViewModel}"/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Grid>

        <!-- Barra de estado -->
        <StatusBar Grid.Row="2" Background="{StaticResource BackgroundBrush}">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Information" Width="16" Height="16" Margin="0,0,4,0"/>
                    <TextBlock Text="Listo" VerticalAlignment="Center"/>
                </StackPanel>
            </StatusBarItem>
            
            <Separator/>
            
            <StatusBarItem>
                <TextBlock Text="{Binding IsMonitoring, Converter={StaticResource MonitoringStatusConverter}}" 
                           VerticalAlignment="Center"/>
            </StatusBarItem>
            
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding Source={x:Static Application.Current}, Path=MainWindow.Title}" 
                           VerticalAlignment="Center"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
